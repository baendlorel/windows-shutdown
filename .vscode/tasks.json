{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: Build Debug (GCC)",
      "command": "g++.exe",
      "args": [
        "-std=c++20",
        "-finput-charset=UTF-8",
        "-fexec-charset=UTF-8",
        "-Wall",
        "-Wextra",
        "-g",
        "-O0",
        "-D_WINDOWS",
        "-DUNICODE",
        "-D_UNICODE",
        "-mwindows",
        "${workspaceFolder}/windows-shutdown/*.cpp",
        "${workspaceFolder}/x64/Debug/windows-shutdown.res",
        "-o",
        "${workspaceFolder}/x64/Debug/windows-shutdown.exe",
        "-luser32",
        "-lgdi32",
        "-lgdiplus",
        "-lkernel32",
        "-lshell32",
        "-lcomctl32",
        "-ladvapi32",
        "-lole32"
      ],
      "options": {
        "cwd": "${workspaceFolder}/windows-shutdown",
        "env": {
          "PATH": "C:\\msys64\\ucrt64\\bin;${env:PATH}"
        }
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build Windows application using GCC compiler (Debug)"
    },
    {
      "type": "shell",
      "label": "C/C++: Build Release (GCC)",
      "command": "g++.exe",
      "args": [
        "-std=c++20",
        "-finput-charset=UTF-8",
        "-fexec-charset=UTF-8",
        "-Wall",
        "-Wextra",
        "-O2",
        "-DNDEBUG",
        "-D_WINDOWS",
        "-DUNICODE",
        "-D_UNICODE",
        "-mwindows",
        "${workspaceFolder}/windows-shutdown/*.cpp",
        "-o",
        "${workspaceFolder}/x64/Release/windows-shutdown.exe",
        "-luser32",
        "-lgdi32",
        "-lgdiplus",
        "-lkernel32",
        "-lshell32",
        "-lcomctl32",
        "-ladvapi32",
        "-lole32",
        "./x64/Release/windows-shutdown.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}/windows-shutdown",
        "env": {
          "PATH": "C:\\msys64\\ucrt64\\bin;${env:PATH}"
        }
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build"
      },
      "detail": "Build Windows application using GCC compiler (Release)"
    },
    {
      "type": "shell",
      "label": "Create Output Directories",
      "command": "cmd",
      "args": [
        "/c",
        "if not exist \"${workspaceFolder}\\x64\\Debug\" mkdir \"${workspaceFolder}\\x64\\Debug\" && if not exist \"${workspaceFolder}\\x64\\Release\" mkdir \"${workspaceFolder}\\x64\\Release\""
      ],
      "group": "build",
      "detail": "Create build output directories"
    },
    {
      "type": "shell",
      "label": "Compile Resource Files",
      "command": "D:\\Windows Kits\\10\\bin\\10.0.26100.0\\x64\\rc.exe",
      "args": [
        "/fo",
        "${workspaceFolder}\\x64\\Debug\\windows-shutdown.res",
        "${workspaceFolder}\\windows-shutdown\\windows-shutdown.rc"
      ],
      "options": {
        "cwd": "${workspaceFolder}\\windows-shutdown",
        "env": {
          "INCLUDE": "D:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Tools\\MSVC\\14.44.35207\\include;D:\\Windows Kits\\10\\Include\\10.0.26100.0\\ucrt;D:\\Windows Kits\\10\\Include\\10.0.26100.0\\shared;D:\\Windows Kits\\10\\Include\\10.0.26100.0\\um;D:\\Windows Kits\\10\\Include\\10.0.26100.0\\winrt"
        }
      },
      "group": "build",
      "detail": "Compile resource files"
    },
    {
      "type": "shell",
      "label": "Full Build",
      "dependsOrder": "sequence",
      "dependsOn": ["Create Output Directories", "Compile Resource Files", "C/C++: Build Debug"],
      "group": {
        "kind": "build"
      },
      "detail": "Full build including resource files"
    }
  ]
}
